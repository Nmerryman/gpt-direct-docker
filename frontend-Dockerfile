FROM node:18 AS build

WORKDIR /frontend

RUN git clone https://github.com/Nmerryman/gpt-direct-front.git

WORKDIR gpt-direct-front

RUN npm install

RUN npm run build


FROM nginx:1.25.1

COPY nginx.conf /etc/nginx/nginx.conf

COPY --from=build /frontend/gpt-direct-front/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

